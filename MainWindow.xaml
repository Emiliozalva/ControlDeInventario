<Window x:Class="SistemaDeInventarioASOEM.MainWindow"
        Icon="/ncs/logo.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDeInventarioASOEM"
        
        xmlns:vm="clr-namespace:SistemaDeInventarioASOEM.viewModels"
        
        mc:Ignorable="d"
        Title="Sistema de Inventario ASOEM" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">

            <Button Content="Agregar producto" 
                    Command="{Binding AbrirVentanaAgregarCommand}"
                    Background="#FF6B6B" Foreground="White" FontWeight="Bold"
                    Width="130" Height="40" Margin="5"/>

            <Button Content="Eliminar producto" 
                    Command="{Binding BorrarProductoCommand}"
                    Background="#3498DB" Foreground="White" FontWeight="Bold"
                    Width="130" Height="40" Margin="5"/>

            <Button Content="Agregar Stock" 
                    Command="{Binding AbrirVentanaAgregarStockCommand}"
                    Background="#E67E22" Foreground="White" FontWeight="Bold"
                    Width="130" Height="40" Margin="5"/>

            <Button Content="Administrar prestamos" 
                    Command="{Binding AbrirAdministrarPrestamosCommand}"
                    Background="#2ECC71" Foreground="White" FontWeight="Bold"
                    Width="150" Height="40" Margin="5"/>



            <Button Content="Generar orden" 
                    Command="{Binding AbrirGenerarOrdenCommand}"
                    Background="#9B59B6" Foreground="White" FontWeight="Bold"
                    Width="130" Height="40" Margin="5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Productos}"
                  SelectedItem="{Binding ProductoSeleccionado}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="10"
                  BorderThickness="1" BorderBrush="Gray">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IDproducto}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding producto}" Width="*"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding marca}" Width="150"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding modelo}" Width="150"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding cantidadStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>