<Window x:Class="SistemaDeInventarioASOEM.windows.VentanaAgregarProducto"
       Icon="/ncs/logo.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDeInventarioASOEM.windows"
        mc:Ignorable="d"
        Title="Agregar Nuevo Producto" 
        Height="450" Width="500"
        MinWidth="400" MinHeight="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,15"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Border Padding="20" Background="#F5F5F5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Registrar Nuevo Producto" 
                       FontSize="22" FontWeight="Bold" Foreground="#333"
                       Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Grid Grid.Row="1" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Nombre del Producto:"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding ProductoNombre, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Marca:"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding Marca, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Modelo:"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Text="{Binding Modelo, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Stock Inicial:"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         Text="{Binding CantidadStock, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Guardar" 
                        Command="{Binding GuardarCommand}"
                        IsDefault="True"
                        Background="#2ECC71" Foreground="White" FontWeight="Bold"
                        Width="100" Height="35" Margin="0,0,10,0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Cancelar" 
                        Command="{Binding CancelarCommand}"
                        IsCancel="True"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold"
                        Width="100" Height="35" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>