<Window x:Class="SistemaDeInventarioASOEM.windows.VentanaAgregarPrestamo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Nuevo Préstamo" Height="480" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20" Background="#F0F8F5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Nuevo Préstamo" FontSize="20" FontWeight="Bold" 
                       Foreground="#27AE60" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="ID del Producto:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding IdProductoBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalContentAlignment="Center" Height="30"/>

                    <Button Grid.Column="1" Content="🔍 Buscar" 
                            Command="{Binding BuscarProductoCommand}" 
                            Width="90" Margin="5,0,0,0"
                            Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                </Grid>

                <TextBlock Text="{Binding NombreProducto}" FontWeight="Bold" 
                           Foreground="#555" Margin="0,0,0,10" TextWrapping="Wrap"/>

                <Separator Margin="0,0,0,10"/>

                <TextBlock Text="Persona que retira:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Persona}" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Área / Oficina:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Area}" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Detalle / Observación:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Descripcion}" 
                         Height="60" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="3"
                         Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancelar" 
                        Command="{Binding CancelarCommand}" 
                        Width="80" Height="35" Margin="0,0,10,0"/>

                <Button Content="GUARDAR" 
                        Command="{Binding GuardarPrestamoCommand}" 
                        Width="100" Height="35" 
                        Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>