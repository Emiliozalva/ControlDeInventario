<Window x:Class="SistemaDeInventarioASOEM.windows.VentanaGenerarOrden"
        Icon="/ncs/logo.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generar Orden de Pedido" Height="650" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">

    <Border Padding="20" Background="#ECEFF1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Nueva Orden de Pedido" 
                       FontSize="22" FontWeight="Bold" Foreground="#8E44AD" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Opacity="0.3" ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Agregar Productos" FontWeight="Bold" FontSize="14" Margin="0,0,0,15" Foreground="#34495E"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Inventario:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>

                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                ItemsSource="{Binding ProductosInventario}" 
                                SelectedItem="{Binding ProductoSeleccionado}"
                                DisplayMemberPath="DescripcionCompleta" 
                                SelectedIndex="0" Height="35" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding CantidadInput}" 
                                 Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,10,0"
                                 ToolTip="Cantidad"/>

                        <Button Grid.Row="0" Grid.Column="3" Content="+" 
                                Command="{Binding AgregarDesdeInventarioCommand}" 
                                Background="#3498DB" Foreground="White" FontWeight="Bold" FontSize="20"
                                Height="35" Width="35" HorizontalAlignment="Right" Padding="0,-5,0,0" Cursor="Hand"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Manual:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>

                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NombreProductoManual}" 
                                 Height="35" VerticalContentAlignment="Center" Margin="0,0,10,0"
                                 ToolTip="Nombre del producto externo"/>

                        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CantidadInput}" 
                                 Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,0,10,0"
                                 ToolTip="Cantidad"/>

                        <Button Grid.Row="2" Grid.Column="3" Content="+" 
                                Command="{Binding AgregarManualCommand}" 
                                Background="#E67E22" Foreground="White" FontWeight="Bold" FontSize="20"
                                Height="35" Width="35" HorizontalAlignment="Right" Padding="0,-5,0,0" Cursor="Hand"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Detalle de la Orden:" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#34495E"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding DetalleOrden}" 
                          SelectedItem="{Binding ItemSeleccionadoParaBorrar}"
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          BorderBrush="#BDC3C7" BorderThickness="1" Background="White"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Producto / Detalle" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                    </DataGrid.Columns>

                    <DataGrid.InputBindings>
                        <KeyBinding Key="Delete" Command="{Binding EliminarItemCommand}"/>
                    </DataGrid.InputBindings>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <TextBlock Text="Eliminar item:" VerticalAlignment="Center" Foreground="Gray" FontSize="12" Margin="0,0,5,0"/>
                    <Button Content="🗑️" 
                            Command="{Binding EliminarItemCommand}"
                            Background="#E74C3C" Foreground="White" FontWeight="Bold" FontSize="16"
                            Width="40" Height="30" Cursor="Hand"
                            ToolTip="Eliminar seleccionado"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancelar" 
                        Command="{Binding CancelarCommand}"
                        Height="40" Width="100"
                        Background="#95A5A6" Foreground="White" FontWeight="Bold"
                        Cursor="Hand"/>

                <Button Grid.Column="2" Content="GENERAR ORDEN" 
                        Command="{Binding GenerarExcelCommand}"
                        Height="40" Width="150"
                        Background="#8E44AD" Foreground="White" FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2"/>
                    </Button.Effect>
                </Button>
            </Grid>

        </Grid>
    </Border>
</Window>